{
    "name": "SimpleQueue",
    "license": "MIT",
    "version": "1.0.0",
    "description": "a simple fifo queue",
    "author": "Felix Boehm <me@feedic.com>",
    "funding": "https://github.com/sponsors/fb55",
    "sideEffects": false,
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "directories": {
        "lib": "lib/"
    },
    "files": [
        "lib/**/*"
    ],
    "repository": {
        "type": "git",
        "url": "git://github.com/fb55/simplequeue.git"
    },
    "scripts": {
        "test": "npm run test:jest && npm run lint",
        "test:jest": "jest",
        "lint": "npm run lint:es && npm run lint:prettier && npm run lint:ts",
        "lint:es": "eslint .",
        "lint:prettier": "npm run prettier -- --check",
        "lint:ts": "tsc --noEmit",
        "format": "npm run format:es && npm run format:prettier",
        "format:es": "npm run lint:es -- --fix",
        "format:prettier": "npm run prettier -- --write",
        "prettier": "prettier '**/*.{js,ts,md,json,yml}'",
        "build": "tsc",
        "prepare": "npm run build"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node"
    },
    "prettier": {
        "tabWidth": 4
    },
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@types/node": "^22.13.5",
        "@typescript-eslint/eslint-plugin": "^8.24.1",
        "@typescript-eslint/parser": "^8.25.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint": "^8.57.1",
        "jest": "^29.7.0",
        "prettier": "^3.5.2",
        "ts-jest": "^29.2.6",
        "typescript": "^5.7.3"
    }
}
